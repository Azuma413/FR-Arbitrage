# ===========================================
# FR-Arbitrage Bot Configuration
# ===========================================
# Copy this file to .env and fill in your values.

# --- Exchange ---
EXCHANGE_NAME=bybit          # bybit or binance

# --- API Credentials ---
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# --- Trading Parameters ---
INVESTMENT_AMOUNT_USDT=1000  # Per-position investment (USDT)
MAX_OPEN_POSITIONS=3         # Max concurrent positions

# --- MarketScanner Thresholds ---
MIN_FUNDING_RATE=0.0003      # 0.03% per 8h
MIN_VOLUME_24H=10000000      # 10M USDT
MIN_SPREAD_PCT=0.002         # 0.2%

# --- Exit Thresholds ---
EXIT_FUNDING_RATE=0.00005    # 0.005% — close if FR drops below
EXIT_SPREAD_PCT=-0.01        # -1.0% — emergency close on negative spread

# --- Safety ---
EMERGENCY_STOP=false         # Set to true to trigger global kill switch
