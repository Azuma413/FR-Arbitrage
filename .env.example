# ===========================================
# Hyperliquid Yield Harvester Configuration
# ===========================================
# Copy this file to .env and fill in your values.

# --- Network & Auth ---
ENVIRONMENT=MAINNET             # MAINNET or TESTNET
PRIVATE_KEY=0xYOUR_PRIVATE_KEY  # Ethereum private key
ACCOUNT_ADDRESS=0xYOUR_ADDRESS  # Wallet address
WANDB_API_KEY=YOUR_WANDB_API_KEY

# --- Strategy Parameters ---
TARGET_COINS=["HYPE","PURR","SOL","ETH"]
BLACKLIST_COINS=[]

# Entry Filters
MIN_FUNDING_RATE_HOURLY=0.00002  # 0.002% per hour
MAX_ENTRY_SPREAD=0.001           # 0.1%
MIN_DAILY_VOLUME=1000000         # $1M

# Execution
SLIPPAGE_TOLERANCE=0.002         # 0.2%
MAX_RETRY_ATTEMPTS=3

# Position Sizing
MAX_POSITION_USDC=1000           # Max USDC per coin
LEVERAGE_BUFFER=0.55             # Perp collateral ratio

# --- Dry-Run Mode ---
DRY_RUN=true                     # true = paper trading (no real orders)

# --- Position Guardian ---
EXIT_NEGATIVE_FR_COUNT=3
MARGIN_USAGE_THRESHOLD=0.80

# --- System ---
DB_URL=sqlite+aiosqlite:///./yield_harvester.db
LOG_LEVEL=INFO

# --- Intervals (seconds) ---
SCAN_INTERVAL_SEC=60
GUARDIAN_INTERVAL_SEC=30

# --- Safety ---
EMERGENCY_STOP=false
